import java.util.Scanner;

public class SpaceBoxing 
{
	public static void main( String[] args)
	{
		Scanner keyboard = new Scanner(System.in);
		
		String earthweight, planet;
		
		System.out.print("Please enter your current weight on Earth: ");
		earthweight = keyboard.next();
		
		System.out.println("I have information for the following planets: ");
		System.out.println("	1. Venus	2. Mars		3. Jupiter");
		System.out.println("	4. Saturn	5. Uranus	6. Neptune");
		
		System.out.print("Which planet are you visiting?");
		planet = keyboard.next();
		
		if(planet.equals("Venus"));
		{
			System.out.print("Your weight would be " + earthweight + " pounds on that planet");
		}
		
		
		if(planet.equals("Mars"));
		{
			System.out.print("Your weight would be " + earthweight + " pounds on that planet");
		}
		
		
		if(planet.equals("Jupiter"));
		{
			System.out.print("Your weight would be " + earthweight + " pounds on that planet");
		}
		
		if(planet.equals("Saturn"));
		{
			System.out.print("Your weight would be " + earthweight + " pounds on that planet");
		}
		
		if(planet.equals("Uranus"));
		{
			System.out.print("Your weight would be " + earthweight + " pounds on that planet");
		}
		
		if(planet.equals("Neptune"));
		{
			System.out.print("Your weight would be " + earthweight + " pounds on that planet");
		}
		
		keyboard.close();
	}

}
